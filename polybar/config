[module/firefox]
type = custom/script
exec = echo 
click-left = firefox &
format-foreground = #ff9933
format-padding = 2

[module/ewmh]
type = internal/xworkspaces
pin-workspaces = true
enable-click = true
enable-scroll = false
icon-0 = selected;
icon-1 = not;
label-active = " "
label-active-foreground = #D3D7CF
label-empty = " "
label-empty-foreground = #D3D7CF
