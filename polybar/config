[module/showupdates]
type = custom/script
exec = ~/.Scripts/showupdates.sh
interval = 2
tail = true
click-left = gnome-terminal -- ~/.Scripts/update.sh &
format-background = #3b6078
format-foreground = #D3D7CF
format-padding = 2

[module/network]
type = internal/network
interface = wlp4s0
interval = 2
label-connected = " %essid%"
