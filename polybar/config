label-disconnected-foreground = #192933
label-disconnected-background = #6595b3

[module/poweroff]
type = custom/menu
format-background = #223744
format-foreground = #D3D7CF
format-padding = 2
menu-0-0 =  "   "
menu-0-0-exec = shutdown -h now
menu-0-1 =    
menu-0-1-exec = poweroff --reboot
label-open =   
label-close = x
label-separator = " | "

[module/date]
type = custom/script
exec = echo $(date '+%d %b %Y')
interval = 12
